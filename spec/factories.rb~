FactoryGirl.define do

  	factory :user do
    	username "Pekka"
    	password "Foobar1"
    	password_confirmation "Foobar1"
  	end

  	factory :rating do
		score 10
  	end

	factory :rating2, class: Rating do
   	score 20
  	end
  
  
	factory :brewery do
    	name "anonymous"
    	year 1900
  	end

	factory :brewery2, class: Brewery do
		name "second"
		year 1990
	end
	
	factory :style do
		name "Test"
		description "something something something"
	end	
	
  	factory :beer do
    	name "anonymous"
    	brewery
    	style
  	end
  	
  	factory :no_name_beer, class: Beer do
  		brewery
  		style
  	end
  	
  	factory :no_style_beer, class: Beer do
  		name "something"
  		brewery
  	end
end