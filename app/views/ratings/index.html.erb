
<h2>Ratings</h2>


<p> Number of ratings: <%= Rating.count %> </p>


<div class="row">
	<div class="col-xs-8 col-sm-4">
		<h2>Top Breweries</h2>
		<%= render 'list', array: @top_breweries %>
	</div>
	<div class="col-xs-4 col-sm-4">
		<h2>Top Beers</h2>
		<%= render 'list', array: @top_beers %>
	</div>
	<div class="col-xs-4 col-sm-4">
		<h2>Top Styles</h2>
		<%= render 'list', array: @top_styles %>
	</div>
</div>

<h2>Most recent</h2>
<ul>
 <% @recent_ratings.each do |rating| %>
   <li> <%= rating %>    <%= link_to rating.user.username, rating.user%></li>
 <% end %>
</ul>

<h2>Most active users</h2>
<ul>
 <% @most_active_users.each do |user| %>
   <li> <%= link_to user.username, user%>, <%= user.ratings.count %> beers rated </li>
 <% end %>
</ul>

